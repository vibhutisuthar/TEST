    <link type="text/css" href="@Url.Content("~/Content/static/css/print.css")" rel="stylesheet" media="print"/>
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,400italic' rel='stylesheet'
        type='text/css' />
